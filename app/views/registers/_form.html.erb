<% config = Cfrp::Application.config %>

<script>
$(function() {
    // Kinda hacky, but does the job for now.
    // Fills in author an genre automatically when filling out title.
    <% titles = @plays.reduce([]) {|m, p| m << "#{p.title} | #{p.author} | #{p.genre}"} %>
    <% authors = @plays.reduce([]) {|m, p| m << p.author} %>

    $('.play_typeahead').typeahead({source: <%= raw titles.to_json %>});
    $('.author_typeahead').typeahead({source: <%= raw authors.to_json %>});

    $('.play_typeahead').change(function(e) {
        var play_id = $(e.currentTarget).data('play-id')
        var play_data = $(e.currentTarget).val().split(' | ')
        $(e.currentTarget).val(play_data[0]);
        $($.find("[data-author-with-play-id='" + play_id + "']")).val(play_data[1]);
        $($.find("[data-genre-with-play-id='" + play_id + "']")).val(play_data[2]);
    });
})
</script>

