<script language="javascript">
  $().ready(function() {
    $('#plays').facet_context();
    $('.facet').facet();
    $('#results').results();
  });
</script>
<div id='plays'>
  <div id='genre' class='facet'></div>
  <div id='acts' class='facet'></div>
  <div id='author' class='facet'></div>
  <div id='results'></div>
</div>

<h2>Import Plays</h2>

<%= form_tag import_plays_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
