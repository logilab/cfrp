<div class='span8'>

<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :html => { :class => 'well' }, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <label class='checkbox remember_me'> <%= f.check_box :remember_me %> Remember Me?</label>
  <% end -%>

  <%= f.submit "Sign in" %>
<% end %>

<%= render "devise/shared/links" %>

</div>
