<div class='span8'>

<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-inline well' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit "Send me reset password instructions" %>
<% end %>

<%= render "devise/shared/links" %>

</div>
